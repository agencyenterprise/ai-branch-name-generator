{
  "name": "branching-ia",
  "displayName": "branching-ia",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "branching-ia.branch-it",
        "title": "Branch It!"
      }
    ],
    "configuration": [
      {
        "title": "General",
        "properties": {
          "branching-ia.defaultPlatform": {
            "type": "string",
            "default": "",
            "description": "Default platform to be used when creating a branch",
            "scope": "General"
          },
          "branching-ia.openAiKey": {
            "type": "string",
            "default": "",
            "description": "API Key for OpenAI. Make sure you have a paid account before creating a key.",
            "scope": "General"
          }
        }
      },
      {
        "title": "Pivotal",
        "properties": {
          "branching-ia.pivotalAPIToken": {
            "type": "string",
            "default": "",
            "description": "API Token for Pivotal",
            "scope": "Pivotal"
          },
          "branching-ia.pivotalProjectId": {
            "type": "string",
            "default": "",
            "description": "Project Id for Pivotal",
            "scope": "Pivotal"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "openai": "^4.0.1"
  }
}
